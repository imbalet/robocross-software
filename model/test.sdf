<?xml version="1.0"?>
<!--
  Gazebo Ackermann steering plugin demo

  Try sending commands:

    gz topic -t "/model/vehicle_blue/cmd_vel" -m gz.msgs.Twist -p "linear: {x: 0.5}, angular: {z: 0.1}"

