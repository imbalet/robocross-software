                        <scan>
                            <horizontal>
                                <samples>200</samples>
                                <resolution>1</resolution>
                                <min_angle>-0.7</min_angle>
                                <max_angle>0.7</max_angle>
                            </horizontal>
                            <vertical>
                                <samples>120</samples>
                                <resolution>1</resolution>
                                <min_angle>-0.48</min_angle>
                                <max_angle>0.48</max_angle>
                            </vertical>
                        </scan>
                        <range>
                            <min>0.7</min>
